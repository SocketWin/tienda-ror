<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, placeholder: "Ronald Espinoza", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :login %><br>
      <%= f.text_field :login, class: "form-control", placeholder: "Nombre de Usuario" %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.text_field :password, type: "password", placeholder: "Contraseña", class: "form-control password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br>
      <%= f.text_field :password_confirmation, type: "password", placeholder: "Confirmación de Contraseña", class: "form-control password" %>
    </div>
    <div class="form-group">
      <%= f.label :direccion %><br>
      <%= f.text_field :direccion, class: "form-control", placeholder: "Dirección domiciliaria" %>
    </div>
    <div class="form-group">
      <%= f.label :cuenta_bancaria %><br>
      <%= f.text_field :cuenta_bancaria, class: "form-control", placeholder: "Número de Cuenta Bancaria" %>
    </div>
    <div class="form-group">
      <%= f.label :edad %><br>
      <%= f.text_field :edad, class: "form-control", placeholder: "Edad" %>
    </div>

    <div class="actions">
      <%= f.submit "Envíar", class:"btn btn-primary" %>
    </div>
<% end %>
