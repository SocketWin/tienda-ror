<% provide(:title, 'Lista de Productos') %>
<h1>Lista de Productos</h1>
<%= will_paginate @products %>
<div class="row">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Imagen</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.titulo %></td>
          <td><%= product.descripcion %></td>
          <td><%= product.imagen %></td>
          <td><%= product.precio %></td>
          <td>
            <%= link_to 'Mostrar', product %>
            <%= link_to 'Editar', edit_product_path(product) %>
            <%= link_to 'Destruir', product, method: :delete, data: { confirm: '¿Estas seguro?' } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @products %>
<br>

<%= link_to 'Nuevo Producto', new_product_path %>
